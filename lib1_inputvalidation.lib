#/bin/bash

# Input validation function

function validinput {
  while : ; do
  
    read -n1 -p "$1" answer

      case $answer in
        [$2]) echo -e; $3; echo; break;;
        [$4]) echo -e "\n$5"; $6; break;;
           *) echo -e "\a\nYou pressed the wrong key!"; echo;;
      esac

  done
}

# Input validation function